mixin home()
    - var prev = page.prev_link
    - var next = page.next_link
    .pagination
        if page.prev
            a.prev(href=url_for(prev)) #{__('prev_page')}
        else
            a.prev 
        if page.next
            a.next(href=url_for(next)) #{__('next_page')}
        else
            a.prev 

mixin post()
    .pagination
        if page.prev
            a.prev(href=url_for(page.prev.path)) << #{page.prev.title}
        if page.next
            a.next(href=url_for(page.next.path)) #{page.next.title} >>
